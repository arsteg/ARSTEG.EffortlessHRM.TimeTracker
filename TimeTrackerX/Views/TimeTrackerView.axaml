            <Grid Margin="0 10 0 0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1*"/>
              </Grid.ColumnDefinitions>
              <TextBlock Grid.Column="0" Text="Today:"/>
              <TextBox Grid.Column="1" 
               Name="txt1Username"
               Text="{Binding CurrentDayTimeTracked,StringFormat=HH:mm}"
               IsReadOnly="True" />
            </Grid>

            <Grid Margin="0 10 0 0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1*"/>
              </Grid.ColumnDefinitions>
              <TextBlock Grid.Column="0" Text="This week:" />
              <TextBox Grid.Column="1" 
               Text="{Binding CurrentWeekTimeTracked,StringFormat=HH:mm}"
               IsReadOnly="True" />
            </Grid>

            <Grid Margin="0 10 0 0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1*"/>
              </Grid.ColumnDefinitions>
              <TextBlock Grid.Column="0" Text="This month:" />
              <TextBox Grid.Column="1" 
               Text="{Binding CurrentMonthTimeTracked}"
               IsReadOnly="True" />
            </Grid>
          </StackPanel>
        </Border>
        <Grid Margin="0 5 0 0">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="6*"/>
          </Grid.ColumnDefinitions>
          <TextBlock Grid.Column="0" x:Name="lblProject" Text="Project:"/>
          <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="-50,0,0,0">
            <controls:ComboBox Name="cmb"
                     ItemsSource="{Binding Path=Projects}"
                     SelectedItem="{Binding Path=SelectedProject}"
                     MinWidth="330" MaxWidth="330">
              <controls:ComboBox.ItemTemplate>
                <DataTemplate>
                  <TextBlock Text="{Binding projectName}"/>
                </DataTemplate>
              </controls:ComboBox.ItemTemplate>
            </controls:ComboBox>
          </StackPanel>
        </Grid>
        <Grid Margin="0 4 0 0">
          <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
          </Grid.ColumnDefinitions>
          <TextBlock Grid.Column="0" x:Name="lblTask" Text="Task:" />
