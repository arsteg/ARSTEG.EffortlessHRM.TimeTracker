<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls"
        mc:Ignorable="d"
        xmlns:vm="using:TimeTrackerX.ViewModels"xmlns:presentation="using:DocumentFormat.OpenXml.Presentation"
        x:Class="TimeTrackerX.LoginView"
        Title="LoginView"
        Width="800" Height="450"
        x:CompileBindings="True">
  <Window.Styles>
    <Style Selector="Image.imgClose">
      <Setter Property="Width" Value="20"/>
      <Setter Property="Height" Value="20"/>
      <Setter Property="Margin" Value="5"/>
      <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Image.imgMinimize">
      <Setter Property="Width" Value="20"/>
      <Setter Property="Height" Value="20"/>
      <Setter Property="Margin" Value="5"/>
      <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="TextBlock.titleText">
      <Setter Property="FontSize" Value="24"/>
      <Setter Property="FontWeight" Value="Bold"/>
      <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style Selector="TextBlock.normalText">
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style Selector="Button.button">
      <Setter Property="Width" Value="100"/>
      <Setter Property="Height" Value="40"/>
      <Setter Property="Background" Value="#3AB19B"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="HorizontalAlignment" Value="Center"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
      <Setter Property="CornerRadius" Value="5"/>
    </Style>
    <Style Selector="Button.buttonCircle">
      <Setter Property="Width" Value="40"/>
      <Setter Property="Height" Value="40"/>
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="Margin" Value="5"/>
      <Setter Property="CornerRadius" Value="20"/>
    </Style>
    <Style Selector="Button.mainButton">
      <Setter Property="Width" Value="200"/>
      <Setter Property="Height" Value="40"/>
      <Setter Property="Background" Value="#3AB19B"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="HorizontalAlignment" Value="Center"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
      <Setter Property="CornerRadius" Value="5"/>
    </Style>
    <Style Selector="TextBlock.textHint">
      <Setter Property="Foreground" Value="#878787"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="Margin" Value="30,0,0,0"/>
      <Setter Property="IsHitTestVisible" Value="False"/>
    </Style>
    <Style Selector="TextBox.textBox">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Padding" Value="30,0,0,0"/>
    </Style>
    <!--<Style Selector="PasswordBox.textBox">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Padding" Value="30,0,0,0"/>
    </Style>-->
    <Style Selector="CheckBox.textCheckBox">
      <Setter Property="Foreground" Value="#878787"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="Margin" Value="30,0,0,0"/>
    </Style>
  </Window.Styles>
  <Grid x:DataType="vm:LoginViewModel">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="1.5*"/>
    </Grid.ColumnDefinitions>
    <Grid Grid.Column="1" Panel.ZIndex="1" HorizontalAlignment="Right">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      <Image Source="/Assets/minimize.png" Grid.Column="1" Classes="imgMinimize" />
      <Image Source="/Assets/close.png" Grid.Column="2" Classes="imgClose" />
    </Grid>
    <Border CornerRadius="10,0,0,10" >
      <!--<Border.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
          <GradientStop Color="White" Offset="0"/>
          <GradientStop Color="#B8E3DC" Offset="0.3"/>
          <GradientStop Color="#70C7B8" Offset="0.6"/>
          <GradientStop Color="#3AADA1" Offset="1"/>
        </LinearGradientBrush>
      </Border.Background>-->
    </Border>
