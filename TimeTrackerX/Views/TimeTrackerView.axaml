<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TimeTrackerX.Views.TimeTrackerView"
        x:CompileBindings="True"
        Title="Time Tracker" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="Transparent" TransparencyLevelHint="AcrylicBlur"
        CanResize="True" ExtendClientAreaToDecorationsHint="True"
        xmlns:vm="clr-namespace:TimeTrackerX.ViewModels"
        Icon="/Assets/icon.ico">
  <!--<Window.Styles>
    <Style Selector="Image.imgClose">
      <Setter Property="Width" Value="20"/>
      <Setter Property="Height" Value="20"/>
      <Setter Property="Margin" Value="5"/>
      <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Image.imgMinimize">
      <Setter Property="Width" Value="20"/>
      <Setter Property="Height" Value="20"/>
      <Setter Property="Margin" Value="5"/>
      <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="TextBlock.titleText">
      <Setter Property="FontSize" Value="24"/>
      <Setter Property="FontWeight" Value="Bold"/>
      <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style Selector="TextBlock.normalText">
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style Selector="Button.button">
      <Setter Property="Width" Value="100"/>
      <Setter Property="Height" Value="40"/>
      <Setter Property="Background" Value="#3AB19B"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="HorizontalAlignment" Value="Center"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
      <Setter Property="CornerRadius" Value="5"/>
    </Style>
    <Style Selector="DataGrid">
      <Setter Property="Background" Value="#FFFFFF"/>
      <Setter Property="BorderBrush" Value="#acb0af"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Margin" Value="10"/>
    </Style>
  </Window.Styles>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    --><!-- Window Controls --><!--
    <Grid Grid.Row="0" Panel.ZIndex="1" HorizontalAlignment="Right">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      <Image Source="/Assets/minimize.png" Grid.Column="1" Classes="imgMinimize" PointerPressed="BtnActionMinimize_OnPointerPressed"/>
      <Image Source="/Assets/close.png" Grid.Column="2" Classes="imgClose" PointerPressed="BtnActionClose_OnPointerPressed"/>
    </Grid>
    --><!-- Main Content --><!--
    <Border Grid.Row="1" Background="#FFFFFF" CornerRadius="10" Margin="10">
      <StackPanel>
        <TextBlock Text="Time Tracker" Classes="titleText" Foreground="#3AB19B" Margin="0,10"/>
        <TextBlock Text="Track your work hours and activities" Classes="normalText" Opacity="0.8" Margin="0,10"/>
        <DataGrid Items="{Binding TimeEntries}" AutoGenerateColumns="False" CanUserSortColumns="True">
          <DataGrid.Columns>
            <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat='yyyy-MM-dd'}"/>
            <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime}"/>
            <DataGridTextColumn Header="End Time" Binding="{Binding EndTime}"/>
            <DataGridTextColumn Header="Duration" Binding="{Binding Duration}"/>
            <DataGridTextColumn Header="Activity" Binding="{Binding Activity}"/>
          </DataGrid.Columns>
        </DataGrid>
      </StackPanel>
    </Border>
    --><!-- Action Buttons --><!--
    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
      <Button Content="Start" Classes="button" Command="{Binding StartTrackingCommand}" Margin="5"/>
      <Button Content="Stop" Classes="button" Command="{Binding StopTrackingCommand}" Margin="5"/>
      <Button Content="Export" Classes="button" Command="{Binding ExportReportCommand}" Margin="5"/>
    </StackPanel>
  </Grid>-->
</Window>